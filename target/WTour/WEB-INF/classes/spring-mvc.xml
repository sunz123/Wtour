    <!--视图解析器-->
    <bean id="viewResolver" class="org.thymeleaf.spring4.view.ThymeleafViewResolver">
        <property name="characterEncoding" value="utf-8"></property>
        <property name="templateEngine" ref="springTemlpateEngine"></property>
    </bean>

    <!--配置拦截器-->
    <mvc:interceptors>
        <!--配置登录拦截-->
        <mvc:interceptor>
            <!--拦截所有路径-->
            <mvc:mapping path="/**"/>
